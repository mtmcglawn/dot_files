## Alias section 

# cp
CP_OPTIONS="-i"							# Confirm before overwriting something
CP_OPTIONS+=" -P"						# Copy symlinks - don't create new files
alias cp="cp $CP_OPTIONS"

alias df='df -h'                                                # Human-readable sizes
alias free='free -m'                                            # Show sizes in MB

alias grep2='grep -inrI'
alias find3='find . -iname'

alias lj='ls -als'

alias nvimdiff='nvim -d'

alias aliases='nvim $ZDOTDIR/aliases'
alias zshrc='nvim $ZDOTDIR/.zshrc'

alias n='nvim'
alias ndiff='nvimdiff'


# Function aliases

alias ghe="git_help_about_git_aliases"
alias the="get_help_about_tmux_aliases"
alias find2="find_files_and_ignore_some_filetypes"

# vim: ft=zsh
